{
  "name": "neotoc",
  "version": "0.1.3",
  "description": "A tool for easily generating beautiful table of contents with JavaScript.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --clean --format esm --minify --sourcemap --dts && pnpm build-css",
    "build-css": "lightningcss --minify --targets \">= 0.25%\" src/styles.css -o dist/styles.css",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run --reporter=verbose",
    "lint": "eslint src/",
    "lint-fix": "eslint src/ --fix",
    "check-format": "prettier src/ --check",
    "format": "prettier src/ --write"
  },
  "keywords": [
    "toc",
    "table of contents",
    "outline",
    "on this page",
    "generator",
    "smooth",
    "intuitive",
    "DOM"
  ],
  "author": "Ashutosh Biswas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashutoshbw/neotoc.git",
    "directory": "packages/neotoc"
  },
  "bugs": "https://github.com/ashutoshbw/neotoc/issues",
  "homepage": "https://neotoc.vercel.app",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "happy-dom": "^15.11.6",
    "lightningcss-cli": "^1.29.1",
    "prettier": "3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  }
}
